<main id="session">
  <%= render "shared/header" %>

  <div id="page-title">
    <h1>Log In</h1>
  </div>

  <%= render "shared/errors" %>

  <section class="session-container">
    <%= form_tag("/session", class: "session-form") do %>
      <%= email_field_tag(
        "email",
        nil,
        placeholder: "Email",
        required: true)
      %>

      <%= text_field_tag(
        "password",
        nil,
        type: :password,
        placeholder: "Password",
        required: true)
      %>

      <%= submit_tag("Log In", class: "submit button") %>
    <% end %>
  </section>

</main>